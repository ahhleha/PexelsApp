<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PexelsApp.Launcher" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/red</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_vector</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.PexelsApp</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/red</item>
        <item name="android:navigationBarColor">@color/red</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>